#!/bin/bash

# [Unit]
# Description=bots service
# Requires=network.target
#
# [Service]
# Type=simple
# User=www
# WorkingDirectory=/www/bots
# ExecStart=/www/bots/run
# Restart=always
# RestartSec=3
#
# [Install]
# WantedBy=multi-user.target

# systemctl reload-daemon
# systemctl enable www-bots
# systemctl start  www-bots

STDOUT="../log/bots-out.log"
STDERR="../log/bots-err.log"

exec java -jar bots.jar ../conf/bots.edn >> $STDOUT 2>>$STDERR &

PID=$!
echo $PID > .pid
wait $PID

#.
